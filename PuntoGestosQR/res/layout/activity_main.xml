<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/glMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jorgechp.npi.practica4.PuntoGestosQR.MainActivity" >

    <Space
        android:layout_gravity="fill_horizontal"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="36dp" />

    <Space
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="107dp" />

    <Space
        android:layout_column="1"
        android:layout_gravity="fill_vertical"
        android:layout_row="2" />

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="278dp"
        android:layout_height="277dp"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="0" >

        <android.gesture.GestureOverlayView
            android:id="@+id/gvGestures"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="#19070B" >

        </android.gesture.GestureOverlayView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="289dp"
        android:layout_height="149dp"
        android:layout_column="0"
        android:layout_gravity="left|fill_vertical"
        android:layout_row="1"
        android:background="#F7F8E0" >

        <TextView
            android:id="@+id/tvLatitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/TV_LATITUD"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvLatitudData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvLatitud"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/tvLatitud"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/tvLongitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/TW_LONGITUD"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvLongitudData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="18dp"
            android:layout_toRightOf="@+id/tvLongitud"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>

</GridLayout>